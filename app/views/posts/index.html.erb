<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post|%>
      <div class="posts-index-item">
        <%= link_to(post.content ,"/posts/#{post.id}")%>
      </div>
    <% end %>
  </div>
  <%= form_tag("/posts/index") do %>

   <div class="form">
    <div class="form-body">
      <textarea name = "content"></textarea>
      <input type="submit" value="投稿">
    </div>
  <% end %>
  </div>
</div>
